<profile name="sbc">
	<!-- 
		Peers
	-->    
	<gateways>                            
		<X-PRE-PROCESS cmd="include" data="peers/*.xml"/>
	</gateways>
	<!-- 
		Domains
	-->    
	<domains>
	</domains>
	<!-- 
		Settings
	-->    
	<settings>
		<!--
			General
		-->          
		<param name="dialplan" value="XML"/>
		<param name="context" value="router"/>
		<!--
			RTP
		-->      
		<!-- Let calls hit the dialplan before selecting codec for the a-leg -->
		<param name="inbound-codec-negotiation" value="generous"/>
		<param name="inbound-late-negotiation" value="true"/>
		<!-- TRANSCODING DISABLED -->
		<param name="disable-transcoding" value="true"/>
		<!-- END TRANSCODING DISABLED -->
		
		<!-- TRANSCODING ENABLED (enable variable in settings.xml too)
		<param name="disable-transcoding" value="false"/>
		<param name="proxy_media" value="false"/>
		<param name="bypass_media" value="false"/>
		END TRANSCODING ENABLED -->
				
		<param name="disable-transfer" value="true"/>
	   
		<!--<param name="apply-register-acl" value="trusted"/>
		<param name="apply-proxy-acl" value="domain"/>-->
		<param name="apply-inbound-acl" value="trusted"/>
		<!-- Allow ZRTP clients to negotiate end-to-end security associations (also enables late negotiation) -->
		<param name="inbound-zrtp-passthru" value="false"/> 
		<param name="inbound-codec-prefs" value="$${global_codec_prefs}"/>
		<param name="outbound-codec-prefs" value="$${global_codec_prefs}"/>
		<param name="sip-port" value="$${external_sip_port}"/>
		<param name="rtp-ip" value="$${external_rtp_ip}"/>
		<param name="sip-ip" value="$${external_sip_ip}"/>
		<param name="ext-rtp-ip" value="auto-nat"/>
		<param name="ext-sip-ip" value="auto-nat"/>                            
		<!--<param name="use-rtp-timer" value="true"/>-->
		<!--<param name="rtp-timer-name" value="soft"/>-->    
		<param name="rtp-timeout-sec" value="300"/>
		<param name="rtp-hold-timeout-sec" value="1800"/>
		<!-- do not resize ptime, G729 -->
		<param name="rtp-autofix-timing" value="false"/>
		<!-- 
			TLS 
		-->
		<param name="tls-only" value="false"/>   
		<param name="tls" value="false"/>

	</settings>

	<limits>
		<!-- 100 requests per minute coming from any host -->
		<!--<request-rate host="ANY" method="ANY" rate="100/60"/> -->
		<!-- 1 REGISTER per minute coming from any host -->
		<!--<request-rate host="ANY" method="REGISTER" rate="1/60"/>-->
		<!-- 30 INVITES per second coming from any host -->
		<!--<request-rate host="ANY" method="INVITE" rate="30/1"/> -->
		<!-- 1 malformed message per minute coming from any host -->
		<!--<request-rate host="ANY" method="MALFORMED" rate="1/60"/> -->
	</limits>


</profile>
