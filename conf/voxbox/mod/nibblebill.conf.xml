<configuration name="nibblebill.conf" description="Nibble Billing">
  <settings>
    <param name="odbc-dsn" value="pgsql://host=$${sql_cluster_host} dbname=$${sql_cluster_db} user=$${sql_cluster_user} password=$${sql_cluster_password}"/>
    <param name="db_table" value="carriers"/>
    <param name="db_column_account" value="id"/>
    <param name="global_heartbeat" value="1"/>

    <param name="custom_sql_lookup" value="SELECT customer_balance AS nibble_balance FROM carriers where id = '${nibble_account}'"/>
    <param name="custom_sql_save" value="SELECT fn_update_customer_balance('${nibble_account}', ${nibble_bill})"/>

    <param name="lowbal_amt" value="1"/>
    <param name="lowbal_action" value="info"/>

    <param name="nobal_amt" value="0.05"/>
    <param name="nobal_action" value="hangup XML router"/>

  </settings>
</configuration>
